{
    "name": "Terra Ecological Platform",
    "short_name": "Terra",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#050814",
    "theme_color": "#0F172A",
    "icons": [
        {
            "src": "/icons/app-icon.svg",
            "sizes": "any",
            "type": "image/svg+xml",
            "purpose": "any maskable"
        }
    ],
    "file_handlers": [
        {
            "action": "/projects",
            "accept": {
                "application/vnd.terra.project+zip": [
                    ".terx",
                    ".fldx"
                ]
            },
            "icons": [
                {
                    "src": "/icons/file-icon.svg",
                    "sizes": "any",
                    "type": "image/svg+xml"
                }
            ]
        }
    ]
}